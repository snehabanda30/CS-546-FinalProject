<section class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="large-text font-bold text-center mb-6">Poster:
        {{post.posterID.username}}</h1>


    <div class="grid">
        {{#each post.requestedUsers}}
        <div class="card">
            <h2 class="text-2xl font-semibold text-gray-800">{{this.username}}</h2>
            <p class="text-lg text-gray-600 mt-2">Skills</p>
            <ul class="mt-3 space-y-2">
                {{#each this.skills}}
                <li class="text-gray-700 text-sm bg-gray-100 py-1 px-2 rounded-md">{{this}}</li>
                {{/each}}
            </ul>
            <button id="select-helper"
                class="mt-4 w-full sm:w-auto bg-blue-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300"
                data-post-id="{{../post._id}}" data-helper-id="{{this._id}}">
                Select as Helper
            </button>
            <p id="success-message-{{this._id}}" class="font-bold text-green-500"></p>
            <ul class="mt-4 hidden bg-red-200 text-red-500 font-bold px-4 py-2 rounded-xl border-2 border-red-500"
                id="inputErrors-{{this._id}}"></ul>

        </div>
        {{/each}}
    </div>
</section>

