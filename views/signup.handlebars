<form action="/users/signup" method="post" class="bg-slate-300 w-1/2 px-6 py-4 mx-auto my-auto rounded-md shadow-lg gap-4 flex flex-col items-start">
  <div class="flex flex-col w-full">
    <label for="username" class="font-bold text-xl mb-2">Username:</label>
    <input type="text" placeholder="Enter username" id="username" name="username" class="rounded-lg px-3 py-2 w-full border-[1px] border-black">
  </div>
  <div class="flex flex-col w-full mb-2">
    <label for="password" class="font-bold text-xl">Password:</label>
    <input type="text" placeholder="Enter password" id="password" name="password" class="rounded-lg px-3 py-2 w-full border-[1px] border-black">
  </div>
  <button type="submit" class="bg-green-600 font-bold text-white hover:bg-green-500 py-2 px-4 rounded-lg transition-all">Submit</button>
</form>