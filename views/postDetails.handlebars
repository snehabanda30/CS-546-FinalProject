{{#ifEqualsID post.posterID._id user.id}}
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-xl mt-8">
    <h1 class="text-3xl font-bold text-center mb-6">Poster:
      {{post.posterID.username}}</h1>

    <div class="space-y-4">
      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Category:</span>
        <span class="text-gray-500">{{post.category}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Location:</span>
        <span class="text-gray-500">{{post.location.address}},
          {{post.location.city}},
          {{post.location.state}},
          {{post.location.zipCode}},
          {{post.location.country}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Skills Required:</span>
        <span class="text-gray-500">{{joinSkills post.skillsRequired}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Priority:</span>
        <span class="text-gray-500">{{post.priority}}</span>
      </div>

      <div class="text-lg font-semibold text-gray-700">
        <span class="block mb-2">Description:</span>
        <p class="text-gray-500 whitespace-pre-wrap">{{post.description}}</p>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Complete By:</span>
        <span class="text-gray-500">{{post.completeBy}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Date Posted:</span>
        <span class="text-gray-500">{{post.datePosted}}</span>
      </div>

    </div>

    <div class="mt-6 text-center">
      <button
        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500 transition duration-300"
      >
        <a href="/posts/{{post._id}}/helpers">View Helpers</a>
      </button>
      <button
        class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-500 transition duration-300 ml-4"
      >
        <a href="/posts/{{post._id}}/comments">View Comments</a>
      </button>
    </div>
  </div>
{{else}}
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-xl mt-8">
    <h1 class="text-3xl font-bold text-center mb-6">Poster:
      {{post.posterID.username}}</h1>

    <div class="space-y-4">
      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Category:</span>
        <span class="text-gray-500">{{post.category}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Location:</span>
        <span class="text-gray-500">{{post.location.address}},
          {{post.location.city}},
          {{post.location.state}},
          {{post.location.zipCode}},
          {{post.location.country}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Skills Required:</span>
        <span class="text-gray-500">{{joinSkills post.skillsRequired}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Priority:</span>
        <span class="text-gray-500">{{post.priority}}</span>
      </div>

      <div class="text-lg font-semibold text-gray-700">
        <span class="block mb-2">Description:</span>
        <p class="text-gray-500 whitespace-pre-wrap">{{post.description}}</p>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Complete By:</span>
        <span class="text-gray-500">{{post.completeBy}}</span>
      </div>

      <div class="flex items-center text-lg font-semibold text-gray-700">
        <span class="mr-2">Date Posted:</span>
        <span class="text-gray-500">{{post.datePosted}}</span>
      </div>

      <div class="mt-6">
        <h2 class="text-2xl font-bold mb-4">Comments</h2>

        <!-- Existing Comments -->
        <ul class="space-y-4">
          {{#each post.comments}}
            <li class="bg-gray-100 p-4 rounded-md">
              <p class="text-gray-800 font-medium">{{this.commenter}}:</p>
              <p class="text-gray-600">{{this.text}}</p>
            </li>
          {{else}}
            <p class="text-gray-500">No comments yet. Be the first to comment!</p>
          {{/each}}
        </ul>

        <!-- New Comment Form -->
        <div class="mt-6">
          <h3 class="text-lg font-semibold mb-2">Add a Comment:</h3>
          <form id="commentForm" method="POST" class="space-y-4">
            <textarea
              name="commentText"
              class="w-full p-3 border rounded-md"
              rows="4"
              placeholder="Write your comment here..."
              required
            ></textarea>
            <button
              type="submit"
              class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500 transition duration-300"
            >
              Post Comment
            </button>
          </form>
        </div>
      </div>

      <ul
        class="hidden bg-red-200 text-red-500 font-bold px-4 py-2 rounded-xl border-2 border-red-500"
        id="commentErrors"
      >
      </ul>

    </div>

    <div class="mt-6 text-center">
      <button
        id="offer-help"
        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500 transition duration-300"
        data-post-id="{{post._id}}"
      >
        Offer Help
      </button>
      <button
        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500 transition duration-300"
      >
        <a href="/">Return</a>
      </button>
      <p id="success-message" class="font-bold text-green-500"></p>
      <ul
        class="hidden bg-red-200 text-red-500 font-bold px-4 py-2 rounded-xl border-2 border-red-500"
        id="inputErrors"
      ></ul>

    </div>
  </div>

{{/ifEqualsID}}