<form
  id="createPostForm"
  method="post"
  class="bg-slate-300 w-full sm:w-4/5 md:w-3/5 lg:w-2/5 xl:w-1/3 px-4 py-6 mx-auto my-6 rounded-lg shadow-xl gap-4 flex flex-col items-start"
>
  <h1 class="font-bold text-2xl mb-4">Create a New Post:</h1>

  <input type="hidden" name="posterID" value="{{userID}}" />

  <div class="flex flex-col w-full mb-4">
    <label for="category" class="font-bold text-lg mb-2">Category:</label>
    <input
      type="text"
      placeholder="Enter category"
      id="category"
      name="category"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="address" class="font-bold text-lg mb-2">Address:</label>
    <input
      type="text"
      placeholder="Enter address"
      id="address"
      name="location[address]"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="suite" class="font-bold text-lg mb-2">Suite:</label>
    <input
      type="text"
      placeholder="Enter suite (optional)"
      id="suite"
      name="location[suite]"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="city" class="font-bold text-lg mb-2">City:</label>
    <input
      type="text"
      placeholder="Enter city"
      id="city"
      name="location[city]"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="state" class="font-bold text-lg mb-2">State:</label>
    <input
      type="text"
      placeholder="Enter state"
      id="state"
      name="location[state]"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="zipCode" class="font-bold text-lg mb-2">Zip Code:</label>
    <input
      type="text"
      placeholder="Enter zip code"
      id="zipCode"
      name="location[zipCode]"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="country" class="font-bold text-lg mb-2">Country:</label>
    <input
      type="text"
      placeholder="Enter country"
      id="country"
      name="location[country]"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="skillsRequired" class="font-bold text-lg mb-2">Skills Required
      (comma separated):</label>
    <input
      type="text"
      placeholder="Enter skills"
      id="skillsRequired"
      name="skillsRequired"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="priority" class="font-bold text-lg mb-2">Priority:</label>
    <select
      id="priority"
      name="priority"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    >
      <option value="" disabled selected>Select Priority</option>
      <option value="Low">Low</option>
      <option value="Medium">Medium</option>
      <option value="High">High</option>
    </select>
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="description" class="font-bold text-lg mb-2">Description:</label>
    <textarea
      placeholder="Enter description"
      id="description"
      name="description"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      rows="4"
      required
    ></textarea>
  </div>

  <div class="flex flex-col w-full mb-4">
    <label for="completeBy" class="font-bold text-lg mb-2">Complete By:</label>
    <input
      type="date"
      id="completeBy"
      name="completeBy"
      class="rounded-lg px-3 py-2 w-full border-[1px] border-black"
      required
    />
  </div>

  <button
    type="submit"
    class="bg-green-600 font-bold text-white hover:bg-green-500 py-2 px-4 rounded-lg transition-all"
  >
    Create Post
  </button>

  <ul
    class="hidden bg-red-200 text-red-500 font-bold px-4 py-2 rounded-xl border-2 border-red-500"
    id="inputErrors"
  >
  </ul>
</form>