<form
  id="createPostForm"
  method="post"
  class="bg-slate-100 w-full md:w-3/4 lg:w-1/2 px-6 py-4 mx-auto my-4 rounded-md shadow-lg flex flex-col gap-6"
>
  <h1 class="font-bold text-2xl text-center">Create a New Post</h1>

  <input type="hidden" name="posterID" value="{{userID}}" />

  <div class="flex flex-col w-full">
    <label for="category" class="font-semibold text-lg mb-2">Category:</label>
    <input
      type="text"
      placeholder="Enter category"
      id="category"
      name="category"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="address" class="font-semibold text-lg mb-2">Address:</label>
    <input
      type="text"
      placeholder="Enter address"
      id="address"
      name="location[address]"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="suite" class="font-semibold text-lg mb-2">Suite:</label>
    <input
      type="text"
      placeholder="Enter suite (optional)"
      id="suite"
      name="location[suite]"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="city" class="font-semibold text-lg mb-2">City:</label>
    <input
      type="text"
      placeholder="Enter city"
      id="city"
      name="location[city]"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="state" class="font-semibold text-lg mb-2">State:</label>
    <input
      type="text"
      placeholder="Enter state"
      id="state"
      name="location[state]"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="zipCode" class="font-semibold text-lg mb-2">Zip Code:</label>
    <input
      type="text"
      placeholder="Enter zip code"
      id="zipCode"
      name="location[zipCode]"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="country" class="font-semibold text-lg mb-2">Country:</label>
    <input
      type="text"
      placeholder="Enter country"
      id="country"
      name="location[country]"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="skillsRequired" class="font-semibold text-lg mb-2">Skills Required (comma separated):</label>
    <input
      type="text"
      placeholder="Enter skills"
      id="skillsRequired"
      name="skillsRequired"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="priority" class="font-semibold text-lg mb-2">Priority:</label>
    <select
      id="priority"
      name="priority"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    >
      <option value="Low">Low</option>
      <option value="Medium">Medium</option>
      <option value="High">High</option>
    </select>
  </div>

  <div class="flex flex-col w-full">
    <label for="description" class="font-semibold text-lg mb-2">Description:</label>
    <textarea
      placeholder="Enter description"
      id="description"
      name="description"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      rows="4"
      required
    ></textarea>
  </div>

  <div class="flex flex-col w-full">
    <label for="completeBy" class="font-semibold text-lg mb-2">Complete By:</label>
    <input
      type="date"
      id="completeBy"
      name="completeBy"
      class="rounded-lg px-4 py-2 w-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
  </div>

  <button
    type="submit"
    class="bg-green-600 hover:bg-green-500 text-white font-bold py-2 px-6 rounded-lg transition-all focus:outline-none focus:ring-2 focus:ring-green-500"
  >
    Create Post
  </button>

  <ul
    class="hidden bg-red-200 text-red-500 font-bold px-4 py-2 rounded-xl border-2 border-red-500"
    id="inputErrors"
  >

  </ul>
</form>
