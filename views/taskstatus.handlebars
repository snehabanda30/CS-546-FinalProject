<form
  id="taskstatusform"
  method="post"
  class="bg-slate-300 w-full sm:w-4/5 md:w-3/5 lg:w-2/5 xl:w-1/3 px-4 py-6 mx-auto my-6 rounded-lg shadow-xl gap-4 flex flex-col items-start"
>
  <h1 class="font-bold text-2xl mb-4">Change Task Status:</h1>

  <!-- Task Status Dropdown -->
  <label for="taskStatus" class="font-semibold">Task Status:</label>
  <select
    id="taskStatus"
    name="status"
    class="w-full bg-white border border-gray-300 rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
    required
  >
    <option value="Pending">Pending</option>
    <option value="In Progress">In Progress</option>
    <option value="Completed">Completed</option>
  </select>

  <!-- Submit Button -->
  <button
    type="submit"
    class="bg-green-600 font-bold text-white hover:bg-green-500 py-2 px-4 rounded-lg transition-all"
  >
    Update 
  </button>

  <!-- Error Messages -->
  <ul
    class="hidden bg-red-200 text-red-500 font-bold px-4 py-2 rounded-xl border-2 border-red-500"
    id="inputErrors"
  >
  </ul>
</form>